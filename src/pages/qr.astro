---
import '../styles/global.css';
const appUrl = 'https://jesus1942.github.io/AquaTech/';
const qrSrc = `https://api.qrserver.com/v1/create-qr-code/?size=320x320&data=${encodeURIComponent(appUrl)}`;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>QR de acceso</title>
    <meta name="theme-color" content="#0F172A" />
  </head>
  <body class="app-bg min-h-screen-ios tap-highlight-none">
    <main class="max-w-sm mx-auto mt-10 card p-6 rounded-2xl shadow-sm text-theme">
      <h1 class="text-xl font-bold text-theme mb-2 text-center">Escanea el QR</h1>
      <p class="text-muted text-center mb-4">Abrir√° la app: <span class="font-semibold">AquaTech</span></p>
      <div class="bg-white rounded-2xl p-4 flex items-center justify-center mb-4">
        <img src={qrSrc} alt="QR AquaTech" width="320" height="320" />
      </div>
      <div class="text-center">
        <a href={appUrl} class="btn-primary px-4 py-2 rounded-xl">Abrir ahora</a>
      </div>
      <p class="text-xs text-muted mt-4 text-center">URL: {appUrl}</p>
    </main>
  </body>
</html>
